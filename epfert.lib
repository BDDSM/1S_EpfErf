	ком = ПолучитьСоединениеСИБ(Скрипт.Настройки);
	Если ком = Неопределено Тогда
		Отказ = Истина;
		Возврат;
	КонецЕсли;
	кнс = ком.Константы.ЗаголовокСистемы.Получить();
	ВывестиЛог(кнс);
	ОсвободитьОбъект(ком);
КонецПроцедуры

